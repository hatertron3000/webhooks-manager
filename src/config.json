{
    "hooks": [
        {
            "type": "Order",
            "scopes": [
                "store/order/*",
                "store/order/created",
                "store/order/archived",
                "store/order/statusUpdated",
                "store/order/message/created"
            ]
        },
        {
            "type": "Product",
            "scopes": [
                "store/product/*",
