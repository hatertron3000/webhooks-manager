                "store/sku/deleted",
                "store/sku/inventory/updated",
                "store/sku/inventory/order/updated"
            ]
        },
        {
            "type": "Customer",
            "scopes": [
                "store/customer/*",
                "store/customer/created",
                "store/customer/updated",
